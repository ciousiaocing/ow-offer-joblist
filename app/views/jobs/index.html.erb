<div class="col-md-12 col-lg-10 col-lg-offset-1">
  <h4>Better job, better life</h4>
  <hr>
  <div class="dropdown clearfix pull-right">
    <button type="button" class="btn btn-primary dropdown-toggle" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">Filter
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDevider">
      <li>
        <%= link_to("Lower Salary", jobs_path(order: "by_lower_bound")) %>
      </li>
      <li>
        <%= link_to("Upper Salary", jobs_path(order: "by_upper_bound")) %>
      </li>
      <li>
        <%= link_to("Publish Time", jobs_path) %>
      </li>
    </ul>
  </div>
  <br><br>
  <table class="table table-boldered">
    <thead>
      <tr>
        <td>Title</td>
        <td>Lower Salary</td>
        <td>Upper Salary</td>
        <td>Publish Time</td>
      </tr>
    </thead>
    <tbody>
      <% @jobs.each do |job| %>
        <tr>
          <td>
            <%= link_to(job.title, job_path(job)) %>
          </td>
          <td>
            <%= job.wage_lower_bound %>
          </td>
          <td>
            <%= job.wage_upper_bound %>
          </td>
          <td>
            <%= job.created_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
